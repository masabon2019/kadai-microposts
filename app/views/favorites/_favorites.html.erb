<ul class="list-unstyle">
  <% favorite_posts.each do |favorite_post| %>
  <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= gravatar_url(favorite_post.user, { size: 50 }) %>">
      <div class="media-body">
        <div>
          <%= link_to favorite_post.user.name, user_path(favorite_post.user) %><span class="text-muted">posted at <%= favorite_post.created_at %></span>
        </div>
        <div>
          <p><%= favorite_post.content %></p>
        </div>
        
      </div>
   </li>
   <% end %>
</ul>